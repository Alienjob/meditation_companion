{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "meditation_companion (remote - chrome)",
            "cwd": "app",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define=SUPABASE_URL=${input:supabaseUrl}",
                "--dart-define=SUPABASE_ANON_KEY=${input:supabaseAnonKey}",
                "--dart-define=OPENAI_API_KEY=${input:openApiKey}",
                "-d",
                "chrome",
            ],
        },
        {
            "name": "meditation_companion (local - chrome)",
            "cwd": "app",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define=SUPABASE_URL=${input:localSupabaseUrl}",
                "--dart-define=SUPABASE_ANON_KEY=${input:localSupabaseAnonKey}",
                "--dart-define=OPENAI_API_KEY=${input:openApiKey}",
                "-d",
                "chrome",
            ],
        },
        {
            "name": "meditation_companion (remote - mobile)",
            "cwd": "app",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define=SUPABASE_URL=${input:supabaseUrl}",
                "--dart-define=SUPABASE_ANON_KEY=${input:supabaseAnonKey}",
                "--dart-define=OPENAI_API_KEY=${input:openApiKey}",
            ],
        },
        {
            "name": "meditation_companion (local - mobile)",
            "cwd": "app",
            "request": "launch",
            "type": "dart",
            "args": [
                "--dart-define=SUPABASE_URL=${input:localSupabaseUrl}",
                "--dart-define=SUPABASE_ANON_KEY=${input:localSupabaseAnonKey}",
                "--dart-define=OPENAI_API_KEY=${input:openApiKey}",
            ],
        }
    ],
    "inputs": [
        {
            "id": "supabaseUrl",
            "type": "command",
            "command": "extension.commandvariable.file.content",
            "args": {
                "fileName": "${workspaceFolder}/secrets/secrets.json",
                "json": "content.supabaseUrl",
                "default": "",
                "keyRemember": "RemoteSupabaseUrl"
            }
        },
        {
            "id": "supabaseAnonKey",
            "type": "command",
            "command": "extension.commandvariable.file.content",
            "args": {
                "fileName": "${workspaceFolder}/secrets/secrets.json",
                "json": "content.supabaseAnonKey",
                "default": "",
                "keyRemember": "RemoteSupabaseAnonKey"
            }
        },
        {
            "id": "localSupabaseUrl",
            "type": "command",
            "command": "extension.commandvariable.file.content",
            "args": {
                "fileName": "${workspaceFolder}/secrets/secrets.json",
                "json": "content.localSupabaseUrl",
                "keyRemember": "LocalSupabaseUrl"
            }
        },
        {
            "id": "localSupabaseAnonKey",
            "type": "command",
            "command": "extension.commandvariable.file.content",
            "args": {
                "fileName": "${workspaceFolder}/secrets/secrets.json",
                "json": "content.localSupabaseAnonKey",
                "keyRemember": "LocalSupabaseAnonKey"
            }
        },
        {
            "id": "openApiKey",
            "type": "command",
            "command": "extension.commandvariable.file.content",
            "args": {
                "fileName": "${workspaceFolder}/secrets/secrets.json",
                "json": "content.openApiKey",
                "default": "",
                "keyRemember": "OpenApiKey"
            }
        }
    ]
}